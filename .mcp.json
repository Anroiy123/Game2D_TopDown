{
  "mcpServers": {
    "figma": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "figma-developer-mcp", "--stdio"],
      "env": {
        "FIGMA_API_KEY": "${input:figma-api-key}"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "type": "stdio"
    },
    "chrome-mcp-server": {
      "url": "http://127.0.0.1:12306/mcp",
      "type": "http"
    },
    "Context 7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {}
    },
    "augmentcode": {
      "type": "stdio",
      "command": "auggie",
      "args": ["--mcp", "-m", "default"]
    }
  }
}
